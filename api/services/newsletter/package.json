{
  "name": "newsletter",
  "version": "1.0.0",
  "description": "Serverless api for handling subscriptions and publishing of the meandering.rocks email newsletter.",
  "workspaces": {
    "nohoist": [
      "**"
    ]
  },
  "private": true,
  "scripts": {
    "offline": "export SLS_DEBUG=* && serverless offline -s dev",
    "dynamodb": "export SLS_DEBUG=* && serverless dynamodb start --seed=dev",
    "develop": "concurrently \"yarn run dynamodb\" \"yarn run offline\" ",
    "test": "echo \"WARNING: no tests specified\"",
    "deploy": "serverless deploy --stage $(../../utils/sls-deploy-git-stage.sh ../../config.json)"
  },
  "author": "Ben Kolb (@bolbken)",
  "license": "MIT",
  "devDependencies": {
    "aws-sdk": "^2.803.0",
    "concurrently": "^5.3.0",
    "juice": "^7.0.0",
    "serverless": "^2.15.0",
    "serverless-bundle": "^4.1.0",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-dynamodb-local": "^0.2.39",
    "serverless-offline": "^6.8.0",
    "sharp": "^0.26.3"
  },
  "dependencies": {
    "handlebars": "^4.7.6"
  }
}
